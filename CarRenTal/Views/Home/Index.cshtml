                        So sánh 900 công ty tại hơn 60,000 địa điểm Bảo đảm giá thấp nhất
                    </p>
                    <a href="#" class="primary-btn text-uppercase">Xem Thêm</a>
                </div>
                <form asp-action="Create" class="col-lg-5  col-md-6 header-right">
                    <h4 class="text-white pb-30">TÌM XE CHO THUÊ</h4>
                    <div class="form" role="form" autocomplete="off">
                        <div class="form">

                            <select asp-for="TenLoai" class="custom-select custom-select mb-3" required="" type="text" style="background:none !important; background-color:white !important" asp-items="ViewBag.MaLoaiXe">
                                <option value="" disabled selected hidden>Chọn loại xe</option>

                            </select>

                        </div>

                        <div class="form">
                            <select asp-for="Tinh" id="countrylist" class="custom-select custom-select mb-3" style="background:none !important; background-color:white !important" required="" asp-items='@(new SelectList(ViewBag.Tinh,"Ma","TenTinh"))'>
                                <option value="" disabled selected hidden>Chọn Tỉnh</option>
                            </select>
                            <span asp-validation-for="Tinh" class="text-danger"></span>
                        </div>
                        <div class="form">
                            <select id="citylist" asp-for="Huyen" class="custom-select custom-select mb-3" required="" style="background:none !important; background-color:white !important" asp-items='@(new SelectList(string.Empty,"TenHuyen","TenHuyen"))'>
                                <option value="" disabled selected hidden>Quận huyện</option>
                            </select>
                            <span asp-validation-for="Huyen" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 ">
                                <div class="input-group dates-wrap">
                                    <input asp-for="ngaynhan" id="datepicker" class="dates form-control" value="@String.Format("{0:MM/dd/yyyy}",DateTime.Now.AddDays(1))" placeholder="Ngày nhận xe" type="text">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><span class="lnr lnr-calendar-full"></span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 wrap-right">
                                <div class="input-group dates-wrap">
                                    <input asp-for="ngaytra" id="datepicker2" class="dates form-control" value="@String.Format("{0:MM/dd/yyyy}",DateTime.Now.AddDays(4))"  placeholder="Ngày nhận xe" type="text">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><span class="lnr lnr-calendar-full"></span></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="from-group">
