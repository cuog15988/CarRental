@model CarRenTal.Models.HomThuLienHe

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



    <section class="contact-page-area section-gap">
        <div class="row d-flex justify-content-center pb-40">
            <div class="col-md-8 pb-40 header-text">
                <h1 class="text-center pb-10">Liên hệ với chúng tôi</h1>
                <p class="text-center">
                    Send us your query anytime!
                </p>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="map-wrap" style="width:100%; height: 445px;" id="map"></div>
                <div class="col-lg-4 d-flex flex-column address-wrap">
                    <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                            <span class="lnr lnr-home"></span>
                        </div>
                        <div class="contact-details">
                            <h5>58/4, Tân Lập 1, Quận 9</h5>
                            <p>TP.HCM</p>
                        </div>
                    </div>
                    <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                            <span class="lnr lnr-phone-handset"></span>
                        </div>
                        <div class="contact-details">
                            <h5>00 (880) 9865 562</h5>
                            <p>Mon to Fri 7am to 6 pm</p>
                        </div>
                    </div>
                    <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                            <span class="lnr lnr-envelope"></span>
                        </div>
                        <div class="contact-details">
                            <h5>support@codethemes.com</h5>
                            <p>Send us your query anytime!</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <form asp-action="Create">
                        <div class="col-lg-8 form-group">
                            <div class="form-group">
                                <input asp-for="NguoiGui" name="NguoiGui" placeholder="Enter your name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" class="common-input mb-20 form-control" required="" type="text" />
                                <span asp-validation-for="NguoiGui" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" name="email" placeholder="Enter email address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" class="common-input mb-20 form-control" required="" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="NoiDung" class="form-control" name="NoiDung" placeholder="Messege" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required="" />
                                <span asp-validation-for="NoiDung" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="primary-btn mt-20 " style="margin-left:20px; color:darkslateblue">Send Message</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>


