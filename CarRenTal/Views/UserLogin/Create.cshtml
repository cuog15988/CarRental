@model CarRenTal.Models.Users

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section top
{
    

}


<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="container">

                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">

                            <h1 class="h4 text-gray-900 mb-4" style="text-align:center">Đăng ký tài khoản!</h1>
                            <form asp-action="Create" class="user">


                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <input asp-for="HoTen" type="text" class="form-control form-control-user"
                                           placeholder="Vui lòng nhập họ tên *" required=""/>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" type="email" class="form-control form-control-user" required=""
                                           placeholder="Vui lòng nhập email *">
                                </div>
                                <div class="form-group">
                                    <input asp-for="NgaySinh" class="form-control form-control-user" />
                                </div>
                                <div class="form-group">
                                    <input asp-for="DiaChi" class="form-control form-control-user" placeholder="Vui lòng nhập Địa chỉ *" required=""/>
                                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="UserName" type="text" class="form-control form-control-user"
                                           placeholder="Vui lòng nhập tên tài khoản *" required=""/>
                                </div>
                                <div class="form-group">
                                    <input asp-for="PassWord" type="password" class="form-control form-control-user" placeholder="Vui lòng nhập mật khẩu *" required="" />
                                </div>

                                <div class="form-group">
                                    <input type="PassWord" class="form-control form-control-user" name="Matkhau " placeholder="Vui lòng nhập lại mật khẩu *" required="" />
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

