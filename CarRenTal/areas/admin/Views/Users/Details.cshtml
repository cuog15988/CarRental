@model CarRenTal.Models.Users

@{
    ViewData["Title"] = "Xe";
    Layout = "~/areas/admin/Views/Shared/_adminLayout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-11">
                @if (Model.Status == true)
                {

                }


                else

                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert" style="background-color:#fff3cd; color:#856404">
                        <strong>Thông báo!</strong> Tài khoản này hiện đang tạm khoá
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <div class="card">
                    <div class="card-header card-header-primary" style="background: linear-gradient(60deg, #d0d4dc, #767176)!important;">
                        <h4 class="card-title" style="color:#161414">User Profile</h4>
                        <span class="card-category">Rental Car Users</span>
                        @if (Model.Status == true)
                        {
                            <span><a href="@Url.Action("khoataikhoan", "Users", new { id = Model.Id })" class="btn btn-danger pull-right" style="float:right">Khoá tài khoản</a></span>

                        }
                        else
                        {
                            <span><a href="@Url.Action("khoataikhoan", "Users", new { id = Model.Id })" class="btn btn-danger pull-right" style="float:right">Mở tài khoản</a></span>

                        }
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Company (disabled)</label>
                                    <input type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Username</label>
                                    <input asp-for="UserName" type="text" class="form-control" style="background-color:transparent" readonly>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Email address</label>
                                    <input asp-for="Email" type="email" class="form-control" style="background-color:transparent" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Full name</label>
                                    <input asp-for="HoTen" type="text" class="form-control" style="background-color:transparent" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Số điện thoại</label>
                                    <input asp-for="Phone" type="text" class="form-control" style="background-color:transparent" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Adress</label>
                                    <input asp-for="DiaChi" type="text" class="form-control" style="background-color:transparent" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">City</label>
                                    <input asp-for="DiaChi" type="text" class="form-control" style="background-color:transparent" readonly>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Ngày nhập</label>
                                    <input asp-for="NgayNhap    " type="text" class="form-control" style="background-color:transparent" readonly>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Postal Code</label>
                                    <input type="text" class="form-control" style="background-color:transparent" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>About Me</label>
                                    <div class="form-group">
                                        <label class="bmd-label-floating"> Lamborghini Mercy, Your chick she so thirsty, I'm in that two seat Lambo.</label>
                                        <textarea class="form-control" rows="5" disabled></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary pull-right">Edit</a>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
