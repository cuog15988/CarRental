@model IEnumerable<CarRenTal.Models.Xe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/areas/seller/Views/Shared/_SallerAdmin.cshtml";
}


<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

        <div class="page-header">
            <h2 style="font-family:Tahoma; font-weight:400">Quản lý sản phẩm </h2>

            <p class="pageheader-text"></p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("product","index")" class="breadcrumb-link">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lý xe</li>
                        <li class="breadcrumb-item active" aria-current="page">Xe đang Khoá</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- recent orders  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header" style="font-size:18px">Danh sách xe đang khoá</h5>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered table-condensed" style="width:100%">
                        <thead>
                            <tr>
                                <th>Ngày Đăng</th>
                                <th>Loại Xe</th>
                                <th>Tên Xe</th>
                                <th>Giá</th>
                                <th>Địa chỉ nhận</th>
                                <th>Tình trạng</th>
                                <th style="    width: 60px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@String.Format("{0:g}", item.NgayNhap) </td>
                                    <td>@item.MaHangXeNavigation.MaLoaiXeNavigation.TenLoai</td>
                                    <td>@item.Tenxe</td>
                                    <td>@String.Format("{0:N0}", item.Gia)</td>
                                    <td>@item.Huyen @item.Tinh </td>

                                    <td style="color:red"> Xe đang khoá</td>
                                    <td>
                                        <button onclick="location.href='/seller/product/Details/@item.Id'" type="button" class="btn btn-outline-success">Chi tiết</button>
                                    </td>


                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





<style>

    #example td {
        color: #333;
    }

    #example tbody {
        color: #333;
        font-weight: 600;
    }
</style>


@section scripts{
    <script>
$(document).ready(function () {
            $('#example').DataTable({
                "order": [[0, "desc"]]
            });
        });


        $(document).ready(function () {
            $('.table table-striped table-bordered').DataTable();
        });</script>
}




